<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.alphadevelopmentsolutions.frcscout.ui.fragments.team.TeamViewModel" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary"
                android:elevation="@dimen/toolbar_elevation"
                app:tabMode="scrollable"
                app:tlViewPager="@{() -> viewpager}"
                app:tabTextColor="@android:color/white"
                tools:layout_editor_absoluteY="200dp" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewpager"
                app:vpChangeListener="@{viewModel.viewPagerOnPageChangeListener}"
                app:vpAdapter="@{viewModel.viewPagerAdapter}"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/header_app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/header_collapsing_toolabr_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/header_constraint_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primary"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/material_padding"
                    app:layout_collapseMode="parallax">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/logo_image_view"
                        android:layout_width="@dimen/team_page_image_width"
                        android:layout_height="@dimen/team_page_image_height"
                        android:src="@mipmap/ic_launcher"
                        app:civ_border_width="0dp"
                        app:glideSrc="@{viewModel.team.avatarUri}"
                        android:layout_marginTop="@dimen/material_margin"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/name_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@{viewModel.team.toString(), default = @string/default_team_name}"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/material_text_header"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/logo_image_view" />

                    <TextView
                        android:id="@+id/number_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{String.valueOf(viewModel.team.number), default = @string/default_team_number}"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/material_text_sub_header"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/name_text_view" />


                    <TextView
                        android:id="@+id/location_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.team.location, default = @string/default_team_location}"
                        android:textAlignment="center"
                        android:textColor="@color/text_secondary_light"
                        android:textSize="@dimen/material_text_support"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/number_text_view" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/location_text_view">

                        <ImageView
                            android:id="@+id/facebook_button"
                            android:layout_width="@dimen/social_media_button_width"
                            android:layout_height="@dimen/social_media_button_height"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:visibility="@{viewModel.team.facebookUrl == null ? View.GONE : View.VISIBLE}"
                            android:padding="@dimen/material_padding"
                            android:src="@drawable/ic_facebook_black"
                            app:tint="@android:color/white" />

                        <ImageView
                            android:id="@+id/twitter_button"
                            android:layout_width="@dimen/social_media_button_width"
                            android:layout_height="@dimen/social_media_button_height"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:visibility="@{viewModel.team.twitterUrl == null ? View.GONE : View.VISIBLE}"
                            android:padding="@dimen/material_padding"
                            android:src="@drawable/ic_twitter_black"
                            app:tint="@android:color/white" />

                        <ImageView
                            android:id="@+id/instagram_button"
                            android:layout_width="@dimen/social_media_button_width"
                            android:layout_height="@dimen/social_media_button_height"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:visibility="@{viewModel.team.instagramUrl == null ? View.GONE : View.VISIBLE}"
                            android:padding="@dimen/material_padding"
                            android:src="@drawable/ic_instagram_black"
                            app:tint="@android:color/white" />

                        <ImageView
                            android:id="@+id/youtube_button"
                            android:layout_width="@dimen/social_media_button_width"
                            android:layout_height="@dimen/social_media_button_height"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:visibility="@{viewModel.team.youtubeUrl == null ? View.GONE : View.VISIBLE}"
                            android:padding="@dimen/material_padding"
                            android:src="@drawable/ic_youtube_black"
                            app:tint="@android:color/white" />

                        <ImageView
                            android:id="@+id/website_button"
                            android:layout_width="@dimen/social_media_button_width"
                            android:layout_height="@dimen/social_media_button_height"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:visibility="@{viewModel.team.websiteUrl == null ? View.GONE : View.VISIBLE}"
                            android:padding="@dimen/material_padding"
                            android:src="@drawable/ic_public_white_24dp"
                            app:tint="@android:color/white" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>


        </com.google.android.material.appbar.AppBarLayout>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_photo_fab"
            app:fabShowOwner="@{viewModel.lifecycleOwner}"
            app:fabShowData="@{viewModel.showFab}"
            android:onClick="@{() -> viewModel.createMedia()}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"

            android:src="@drawable/ic_photo_camera_white_24dp" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>