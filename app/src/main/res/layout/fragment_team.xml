<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.TeamFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/primary"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/TeamLogoImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:src="@mipmap/ic_launcher"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/TeamNumberNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="5885 - Villanova WiredCats"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textPrimary"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TeamLogoImageView" />

                <TextView
                    android:id="@+id/TeamLocationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="LaSalle, Ontario, Canada"
                    android:textAlignment="center"
                    android:textColor="@color/textSecondaryLight"
                    android:textSize="@dimen/textSecondary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TeamNumberNameTextView" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TeamLocationTextView">

                    <com.alphadevelopmentsolutions.frcscout.Classes.FontAwesomeBrandIcon
                        android:id="@+id/FacebookFontAwesomeBrandIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:text="@string/icon_facebook"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        tools:layout_editor_absoluteX="354dp"
                        tools:layout_editor_absoluteY="338dp" />

                    <com.alphadevelopmentsolutions.frcscout.Classes.FontAwesomeBrandIcon
                        android:id="@+id/TwitterFontAwesomeBrandIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:text="@string/icon_twitter"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        tools:layout_editor_absoluteX="66dp"
                        tools:layout_editor_absoluteY="138dp" />

                    <com.alphadevelopmentsolutions.frcscout.Classes.FontAwesomeBrandIcon
                        android:id="@+id/InstagramFontAwesomeBrandIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:text="@string/icon_instagram"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        tools:layout_editor_absoluteX="354dp"
                        tools:layout_editor_absoluteY="238dp" />

                    <com.alphadevelopmentsolutions.frcscout.Classes.FontAwesomeBrandIcon
                        android:id="@+id/YoutubeFontAwesomeBrandIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:text="@string/icon_youtube"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        tools:layout_editor_absoluteX="354dp"
                        tools:layout_editor_absoluteY="238dp" />

                    <com.alphadevelopmentsolutions.frcscout.Classes.FontAwesomeSolidIcon
                        android:id="@+id/WebsiteFontAwesomeSolidIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:text="@string/icon_website"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        tools:layout_editor_absoluteX="354dp"
                        tools:layout_editor_absoluteY="238dp" />

                </LinearLayout>

            </android.support.constraint.ConstraintLayout>

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.design.widget.TabLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/primary" />

                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.AppBarLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/AddScoutCardFloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:src="@drawable/ic_add_white_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:focusable="true" />

</android.support.constraint.ConstraintLayout>