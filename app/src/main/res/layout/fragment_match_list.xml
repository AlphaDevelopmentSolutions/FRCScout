<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.alphadevelopmentsolutions.frcscout.ui.fragments.matches.MatchListViewModel" />

    </data>

    <androidx.recyclerview.widget.RecyclerView
        android:background="@color/background"
        android:id="@+id/match_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:rvAdapter="@{viewModel.matchListRecyclerViewAdapter}"
        tools:listitem="@layout/layout_card_match"
        tools:context=".ui.matches.MatchListFragment">

    </androidx.recyclerview.widget.RecyclerView>
</layout>