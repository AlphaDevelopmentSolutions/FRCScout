<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="materialCardViewStyle">@style/CustomCardView</item>
        <item name="floatingActionButtonStyle">@style/CustomFab</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetTheme</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/btn_clear</item>
    </style>

    <style name="CustomFab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/accent</item>
        <item name="tint">#FFF</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="CustomCardView" parent="CardView">
        <item name="cardCornerRadius">@dimen/material_card_corner_radius</item>
        <item name="cardElevation">@dimen/material_card_elevation</item>
    </style>

    <style name="CustomDialogCardView" parent="CardView">
        <item name="cardCornerRadius">@dimen/material_dialog_corner_radius</item>
    </style>


    <style name="BottomSheetTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">500dp</item>
        <item name="android:background">@drawable/rounded_layout</item>
    </style>

    <style name="CustomTextInputLayout.Light" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
<!--        <item name="boxStrokeColor">@color/text_input_layout_outlined_light</item>-->
        <item name="boxStrokeColor">#000</item>
        <item name="hintTextColor">@color/text_light</item>
        <item name="android:textColorHint">@color/text_light</item>

    </style>

    <style name="CustomEditText.Light" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/text_light</item>
        <item name="colorControlActivated">@color/text_light</item>
    </style>

    <style name="CustomTextButton.Light" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="rippleColor">@color/text_light</item>
    </style>

    <style name="CustomToolBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">#FFF</item>
    </style>

    <style name="CustomProgressDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:textSize">@dimen/text_secondary</item>
    </style>

    <style name="TextInputLayoutLight" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="OutlineBoxLight" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#fff</item>
        <item name="android:textColorHint">#fff</item>
        <item name="android:strokeColor">#fff</item>
    </style>

    <style name="EditTextLight" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">#FFF</item>
        <item name="colorControlActivated">#FFF</item>
    </style>

</resources>
